            <g>
              <g>
                <path
                  class="mighty"
                  d="M671.504,577.829l110.485-432.609H902.86v-68H729.174L703.128,179.2L0,178.697l74.753,399.129h596.751V577.829z M685.766,247.188l-67.077,262.64H131.199L81.928,246.756L685.766,247.188z"
                ></path>
                <path
                  class="mighty"
                  d="M578.418,825.641c59.961,0,108.743-48.783,108.743-108.744s-48.782-108.742-108.743-108.742H168.717 c-59.961,0-108.744,48.781-108.744,108.742s48.782,108.744,108.744,108.744c59.962,0,108.743-48.783,108.743-108.744 c0-14.4-2.821-28.152-7.927-40.742h208.069c-5.107,12.59-7.928,26.342-7.928,40.742 C469.675,776.858,518.457,825.641,578.418,825.641z M209.46,716.897c0,22.467-18.277,40.744-40.743,40.744 c-22.466,0-40.744-18.277-40.744-40.744c0-22.465,18.277-40.742,40.744-40.742C191.183,676.155,209.46,694.432,209.46,716.897z M619.162,716.897c0,22.467-18.277,40.744-40.743,40.744s-40.743-18.277-40.743-40.744c0-22.465,18.277-40.742,40.743-40.742 S619.162,694.432,619.162,716.897z"
                ></path>
              </g>
            </g>
          </g></svg
        >
      </symbol>

      <symbol id="icon-orders" viewBox="0 0 24 24">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-file-signature"
          ><path
            d="M20 19.5v.5a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h8.5L18 5.5"
          ></path><path d="M8 18h1"></path><path
            d="M18.42 9.61a2.1 2.1 0 1 1 2.97 2.97L16.95 17 13 18l.99-3.95 4.43-4.44Z"
          ></path></svg
        >
      </symbol>
    </svg>
  </div>
</body>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Lato:wght@400&display=swap");

  .sidebar-menu {
    background: var(--gradient-subtle);
  }

  .menu-item {
    foreground: var(--accent-text-over);
  }

  .mighty {
    fill: var(--gray-0);
  }

  .sidebar-content {
    background: var(--gray-999);
  }

  *,
  :after,
  :before {
    box-sizing: border-box;
    padding: 0;
    margin: 0;
  }

  html {
    height: 100%;
  }

  body,
  html,
  #map {
    width: 100%;
    height: 100%;
  }

  .ccontainer {
    position: relative;
    min-height: 100%;
    margin: 0;
    padding: 0;
    font-family: "Lato", sans-serif;
    background-color: #f1f1f1;
  }

  svg:not(:root) {
    overflow: hidden;
  }

  .hidden {
    display: none;
  }

  .leaflet-left {
    transform: translateX(5px);
  }

  .active-sidebar .leaflet-left {
    transform: translateX(300px);
    transition: transform 350ms;
  }

  .sidebar {
    display: flex;
    position: absolute;
    width: 46px;
    max-width: 300px;
    z-index: 999;
    box-shadow: none;
    overflow: hidden;
    border-right: 2px solid var(--accent-overlay);
    height: 100%;
  }

  .active-sidebar .sidebar {
    max-width: 560px;
    width: 100%;
  }

  @media (min-width: 300px) {
    .sidebar {
      top: 10px;
      left: 10px;
      height: calc(100% - 20px);
      transition: width 500ms;
    }

    .leaflet-left {
      transform: translateX(55px);
    }

    .active-sidebar .sidebar {
      max-width: 480px;
      width: 100%;
      transition: width 1s;
    }
  }

  .close-button {
    cursor: pointer;
    position: absolute;
    top: 10px;
    right: 8px;
    border: none;
    padding: 5px;
    margin: 0;
    padding: 0;
    border-radius: 3px;
    background: none;
    opacity: 0;
    pointer-events: none;
  }

  .active-sidebar .close-button {
    pointer-events: all;
    opacity: 1;
    transition: opacity 100ms ease-in-out;
  }

  .sidebar .close-button svg {
    fill: #fff;
  }

  .sidebar::before {
    position: absolute;
    content: "";
    z-index: -1;
    top: 0;
    left: 44px;
    width: 100%;
    height: 40px;
    background: var(--accent-dark);
  }

  .active-sidebar .sidebar::before {
    left: 42px;
  }

  .sidebar svg {
    display: block;
    width: 20px;
    height: 20px;
    pointer-events: none;
  }

  .sidebar-menu {
    display: flex;
    flex-direction: column;
    list-style: none;
    height: 100%;
  }

  .sidebar-menu li {
    padding: 10px 11px;
    cursor: pointer;
  }

  @keyframes rotation {
    from {
      transform: rotate(0deg);
    }

    to {
      transform: rotate(180deg);
    }
  }

  .active-item {
    background: var(--accent-regular);
  }

  .active-item svg {
    fill: #fff;
  }

  .item-content {
    display: none;
    height: 100%;
  }

  .item-content .content {
    overflow: auto;
    margin-top: 15px;
    height: calc(100% - 15px);
  }

  .sidebar-content {
    width: 100%;
    pointer-events: none;
    transition: opacity 500ms;
  }

  .active-sidebar .sidebar-content {
    opacity: 1;
    pointer-events: visible;
    transition: opacity 200ms;
  }

  .sidebar-content h2 {
    font-size: 1.2rem;
    font-weight: bold;
    letter-spacing: 1px;
    background: var(--accent-dark);
    padding: 5px;
    color: #fff;
    white-space: nowrap;
    width: calc(100% - 10px);
    height: 25px;
    margin: 0;
    text-overflow: ellipsis;
    overflow: hidden;
    margin-left: 10px;
    margin-top: 10px;
  }

  .active-content {
    display: block;
    pointer-events: all;
  }
</style>
