// Description: This is the main map component for the Roomba Dash project. 
import Leaflet from "./Leaflet.astro";
import DeveloperMenu from "./svelte/DeveloperMenu.svelte";
import ShoppingCart from "./svelte/ShoppingCartMenu.svelte";
import Shop from "./svelte/ShopMenu.svelte";
import OrderNumIndicator from "./svelte/OrderNumIndicator.svelte";
import { Badge } from "flowbite-svelte";
import OrderMenu from "./svelte/OrderMenu.svelte";
---

<head>
  <link
    rel="stylesheet"
    href="https://unpkg.com/leaflet@1.9.2/dist/leaflet.css"
  />
  <title>Roomba Dash Leaf</title>
</head>
<body>
  <div id="map">
    <Leaflet container="map" containerstyle="height: 80vh" />
    <div class="sidebar z-0">
      <button
        aria-label="close sidebar"
        type="button"
        class="close-button rounded-lg bg-red-200"
      >
        <svg>
          <use xlink:href="#icon-clear"></use>
        </svg>
      </button>

      <ul class="sidebar-menu rounded-lg z-0">
        <li class="menu-item" data-item="shopping">
          <Badge
            rounded
            class="w-4 h-4 ml-2 font-semibold text-black bg-gray-300 dark:text-black dark:bg-red"
          >
            <OrderNumIndicator client:only="svelte" />
          </Badge>
          <svg>
            <use xlink:href="#shopping-cart"></use>
          </svg>
        </li>
        <li class="menu-item" data-item="shopmenu">
          <svg>
            <use xlink:href="#icon-shop-menu"></use>
          </svg>
        </li>
        <li class="menu-item" data-item="ordermenu">
          <svg>
            <use xlink:href="#icon-orders"></use>
          </svg>
        </li>
      </ul>

      <div class="sidebar-content z-0">
        <div class="item-content" id="shopping">
          <h2>Shopping cart</h2>
          <div class="content">
            <ShoppingCart client:only="svelte" />
          </div>
        </div>

        <div class="item-content z-0" id="shopmenu">
          <h2>Shop Menu</h2>
          <div class="content text-black">
            <Shop client:only="svelte" />
          </div>
        </div>

        <div class="item-content z-0" id="ordermenu">
          <h2>Your Orders</h2>
          <div class="content">
            <OrderMenu client:only="svelte" />
          </div>
        </div>
      </div>
    </div>

    <svg xmlns="http://www.w3.org/2000/svg" style="display: none">
      <symbol id="icon-arrow-left" viewBox="0 0 24 24">
        <path
          class="mighty"
          d="M15.422 16.594 14.016 18l-6-6 6-6 1.406 1.406L10.828 12z"></path>
      </symbol>
      <symbol id="icon-clear" viewBox="0 0 24 24">
        <path
          class="mighty"
          d="M18.984 6.422 13.406 12l5.578 5.578-1.406 1.406L12 13.406l-5.578 5.578-1.406-1.406L10.594 12 5.016 6.422l1.406-1.406L12 10.594l5.578-5.578z"
        ></path>
      </symbol>

      <symbol id="icon-menu" viewBox="0 0 24 24">
        <path
          class="mighty"
          d="M3 13h18a1 1 0 0 0 0-2H3a1 1 0 0 0 0 2zm0-6h18a1 1 0 0 0 0-2H3a1 1 0 0 0 0 2zm0 12h18a1 1 0 0 0 0-2H3a1 1 0 0 0 0 2z"
        ></path>
      </symbol>

      <symbol id="icon-shop-menu" viewBox="0 0 24 24">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-shopping-bag"
        >
          <path d="M6 2 3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4Z"></path>
          <path class="mighty" d="M3 6h18"></path>
          <path d="M16 10a4 4 0 0 1-8 0"></path>
        </svg>
         >
      </symbol>
      <symbol id="icon-dev" viewBox="0 0 24 24">
        <svg
          viewBox="0 0 20 20"
          version="1.1"
          xmlns="http://www.w3.org/2000/svg"
        >
          <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
          <g
            id="SVGRepo_tracerCarrier"
            stroke-linecap="round"
            stroke-linejoin="round"></g>
          <g id="SVGRepo_iconCarrier">
            <g id="layer1">
              <path
                class="mighty"
                d="M 0 2 L 0 18 L 20 18 L 20 2 L 0 2 z M 1 3 L 19 3 L 19 5 L 1 5 L 1 3 z M 1 6 L 19 6 L 19 17 L 1 17 L 1 6 z M 7.6464844 8.1464844 L 4.2929688 11.5 L 7.6464844 14.853516 L 8.3535156 14.146484 L 5.7070312 11.5 L 8.3535156 8.8535156 L 7.6464844 8.1464844 z M 12.353516 8.1464844 L 11.646484 8.8535156 L 14.292969 11.5 L 11.646484 14.146484 L 12.353516 14.853516 L 15.707031 11.5 L 12.353516 8.1464844 z "
                style=" fill-opacity:1; stroke:none; stroke-width:0px;"></path>
            </g>
          </g>
        </svg>
      </symbol>
      <symbol id="shopping-cart" viewBox="0 0 24 24">
        <svg
          fill="#000000"
          version="1.1"
          id="Capa_1"
          xmlns="http://www.w3.org/2000/svg"
          xmlns:xlink="http://www.w3.org/1999/xlink"
          viewBox="0 0 902.86 902.86"
          xml:space="preserve"
          ><g id="SVGRepo_bgCarrier" stroke-width="0"></g>
          <g
            id="SVGRepo_tracerCarrier"
            stroke-linecap="round"
            stroke-linejoin="round"></g>
